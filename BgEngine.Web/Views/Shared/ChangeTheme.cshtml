@using System.Web.Helpers;

<script type="text/javascript">
    $(document).ready(function () {        
        $("#themeselector").selectmenu({
            width: "100%",
            style: "default",
            menuWidth:400,
            maxHeight: 400,
            positionOptions: {
                my: "right center",
                at: "left center",
                offset: "-20 0"                
            }
        });
        $("#themeselector").change(function () {
            $.post("@Url.RouteUrl("Default", new { controller = "Theme", action = "SetThemeCookie"})", 
                    { theme: $(this).val() },
                    function(data,status) {
                        window.location.reload();
                    },"json"
             );                         
        });
    });
</script>


<div id="config">
    <select id="themeselector" name="Theme">
        <optgroup label="@Resources.AppMessages.Change_Theme">
            @foreach(var Theme in Themes.AvailableThemes){ 
            <option value="@Theme" 
            @if(IsPost){
               if(Request.Form["Theme"]==Theme){<text>Selected</text>}
               } else {
               if(Themes.DefaultTheme == Theme){<text>Selected</text>}
              }
           >@Theme</option>
            }
        </optgroup>
    </select>
</div>